<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondry"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMain"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="Leave a comment to merchant"
            android:textColor="@color/colorSecondry"
            android:textSize="16sp"
            android:fontFamily="@font/proximanova_regular" />

        <EditText
            android:id="@+id/commentET"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="16dp"
            android:background="@drawable/grey_border_rectangle"
            android:gravity="top|left"
            android:hint="Your Comment..."
            android:padding="16dp"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            android:textColorHint="@color/read_grey"
            android:textColor="@color/text_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:orientation="horizontal"
            android:id="@+id/commentCbParent"
            android:padding="4dp">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/commentCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:duplicateParentState="true"
                android:clickable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I want to skip this step"
                android:textColor="@color/text_grey"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>


        <Button
            android:id="@+id/commentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/button_ripple_bg"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:text="Submit"
            android:fontFamily="@font/proximanova_regular"
            android:textAllCaps="false"
            android:textColor="@color/colorSecondry"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>