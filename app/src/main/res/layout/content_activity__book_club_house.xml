<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.milagro.mahindraclapp.com.mahindraclapp.Activities.Activity_BookClubHouse"
    tools:showIn="@layout/activity__book_club_house">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <!--<android.support.design.widget.TextInputLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:textColorHint="@color/Red">-->

            <!--<com.mlife.Utils.CustomEditText-->
            <!--android:id="@+id/et_EventName"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="Title"-->
            <!--android:inputType="textCapSentences"-->
            <!--android:textColor="@color/LightGrey"-->
            <!--android:textColorHint="@color/Red" />-->

        <!--</android.support.design.widget.TextInputLayout>-->

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColorHint="@color/Red">

            <com.mlife.utils.CustomTextView
                android:id="@+id/tv_FacilityBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Facility"
                android:textColor="@color/Red" />

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/sp_Facility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cac9c9" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/Red">

            <com.mlife.utils.CustomEditText
                android:id="@+id/et_EventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/selectdateclubhousebooking"
                android:drawablePadding="10dp"
                android:hint="Event Start Date"
                android:inputType="textEmailAddress"
                android:textColor="@color/LightGrey"
                android:textColorHint="@color/Red" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ti_Date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:textColorHint="@color/Red">

            <com.mlife.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:drawableLeft="@mipmap/selecttimeslot"
                android:drawablePadding="10dp"
                android:hint="Select Time Slot"
                android:inputType="textEmailAddress"
                android:maxLength="25"
                android:textColorHint="@color/Red" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="8dp"
            app:cardElevation="3dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_TimeSlot"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="35dp"
            android:drawableLeft="@mipmap/selecttimeslotclubhousebooking"
            android:drawablePadding="10dp"
            android:hint="Select Time Slot"
            android:textColorHint="@color/Red"
            android:textSize="18sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight=".5"
                android:textColorHint="@color/Red">

                <com.mlife.utils.CustomEditText
                    android:id="@+id/et_EventStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:drawableRight="@mipmap/dropdownclubhousebooking"
                    android:hint="Start Time"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/LightGrey"
                    android:textColorHint="@color/Red" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight=".5"
                android:textColorHint="@color/Red">

                <com.mlife.utils.CustomEditText
                    android:id="@+id/et_EventEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableRight="@mipmap/dropdownclubhousebooking"
                    android:hint="End Time"
                    android:textColor="@color/LightGrey"
                    android:textColorHint="@color/Red" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <com.mlife.utils.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="35dp"
            android:drawableLeft="@mipmap/numberofpeopleclubhousebooking"
            android:drawablePadding="10dp"
            android:hint="Number of People"
            android:textColorHint="@color/Red"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dec"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.1"
                android:background="@color/DarkGrey"
                android:padding="8dp"
                android:src="@mipmap/minusclubhousebooking" />

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight=".8"
                app:cardBackgroundColor="@color/White"
                app:cardElevation="5dp">

                <com.mlife.utils.CustomEditText
                    android:id="@+id/et_EventCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="50" />

            </android.support.v7.widget.CardView>


            <ImageView
                android:id="@+id/iv_inc"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.1"
                android:background="@color/DarkGrey"
                android:padding="8dp"
                android:src="@mipmap/plusclubhousebooking" />

        </LinearLayout>

        <com.mlife.utils.CustomTextView
            android:id="@+id/tv_MaxBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="MAX"
            android:layout_marginRight="5dp"/>




        <Button
            android:id="@+id/btn_BookEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/custombutton"
            android:text="Book Now"
            android:textAllCaps="false"
            android:textColor="@color/White" />

    </LinearLayout>

</ScrollView>