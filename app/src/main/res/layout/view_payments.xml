<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.mlife.utils.CustomTextView
                    android:id="@+id/tv_InvoiceNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:gravity="top"
                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:text="Invoice No. A12356"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <com.mlife.utils.CustomTextView
                    android:id="@+id/tv_Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="Month: September, 2017"
                    android:textColor="@color/LightGrey"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <com.mlife.utils.CustomTextView
                    android:id="@+id/tv_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="2dp"
                    android:text="Amount: INR 45000"
                    android:textColor="@color/LightGrey"
                    android:textSize="14sp" />

                <com.mlife.utils.CustomTextView
                    android:id="@+id/tv_DueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="2dp"
                    android:text="Due Date: 25 Septembet,2017"
                    android:textColor="@color/LightGrey"
                    android:textSize="14sp" />

                <com.mlife.utils.CustomTextView
                    android:id="@+id/tv_Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="2dp"
                    android:text="Description: Septembet maintenance bill"
                    android:textColor="@color/LightGrey"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0"
                android:gravity="end"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_BillStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:src="@mipmap/scheduledicon" />

                <com.mlife.utils.CustomTextView
                    android:id="@+id/tv_BillStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:maxLines="1"
                    android:text="Due"
                    android:textColor="@color/LightGrey"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_DownloadIvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/pdficon" />

            <com.mlife.utils.CustomTextView
                android:id="@+id/tv_DownloadIvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawablePadding="10dp"
                android:text="Download Invoice"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llpayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.mlife.utils.CustomButton
                android:id="@+id/btn_Pay"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:background="@drawable/custombutton"
                android:text="Pay Now"
                android:textAllCaps="false"
                android:textColor="@color/White" />

            <com.mlife.utils.CustomButton
                android:id="@+id/btn_DemandLetter"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:background="@drawable/custombuttongray"
                android:text="Demand Letter"
                android:textAllCaps="false"
                android:textColor="@color/White" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#d2d2d2" />

</LinearLayout>