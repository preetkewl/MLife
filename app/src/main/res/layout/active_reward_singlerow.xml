<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customfont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/activeRL"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorSecondry">

        <RelativeLayout
            android:id="@+id/logoRL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/grey_circle_shadow"
            android:gravity="center">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/logoIV"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:elevation="4dp"
                android:scaleType="fitXY"
                app:riv_oval="true"
                android:src="@drawable/mahindra_logo"

                />

        </RelativeLayout>


        <TextView
            android:id="@+id/programNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/logoRL"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/claimCodeTV"
            android:layout_toRightOf="@+id/logoRL"
            android:ellipsize="end"
            android:fontFamily="@font/proximanova_regular"
            android:maxLines="1"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:text="Mahindra lifespace gold"/>

        <TextView
            android:id="@+id/offerValidTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/programNameTV"
            android:layout_below="@+id/programNameTV"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/claimCodeTV"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Offer valid till 13 May 2018"
            android:textColor="@color/text_grey"
            android:textSize="12sp"
            android:fontFamily="@font/proximanova_regular" />


        <TextView
            android:id="@+id/claimCodeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/claim_code_rectangle"
            android:padding="7dp"
            android:text=" MLS012 "
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:fontFamily="@font/proximanova_regular" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/activeRL"
        android:background="@color/read_grey" />

</RelativeLayout>
