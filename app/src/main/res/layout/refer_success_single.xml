<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/referNameTV"
        android:text="Sharukh khan "
        android:fontFamily="@font/proximanova_regular"
        android:layout_marginLeft="12dp"
        android:textColor="@color/text_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/referNumberTV"
        android:text="9745959870"
        android:fontFamily="@font/proximanova_regular"
        android:layout_below="@id/referNameTV"
        android:layout_marginLeft="12dp"
        android:textColor="@color/text_grey"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/successImg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/ic_tick_circle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/existingMemberTV"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:text="Existing\n member"
        android:gravity="center"
        android:textSize="10sp"
        android:layout_centerVertical="true"
        android:textColor="@color/text_grey"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/bottomView"
        android:background="@color/read_grey"
        android:layout_below="@+id/referNumberTV"
        android:layout_marginTop="4dp" />

</RelativeLayout>