<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:background="@color/White"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:orientation="vertical">

                <com.mlife.utils.CustomTextView
                    android:id="@+id/tv_ClubEventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:gravity="top"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:text="Birthday celebration"
                    android:textColor="@color/Red"
                    android:textSize="16sp" />

                <com.mlife.utils.CustomTextView
                    android:id="@+id/tv_ClubEventBookingDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:text="Booking Date: 10 September, 2017"
                    android:textColor="@color/LightGrey"
                    android:textSize="14sp" />

                <com.mlife.utils.CustomTextView
                    android:id="@+id/tv_ClubEventTimeSlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:text="Time Slot: 6 PM to 11 PM"
                    android:textColor="@color/LightGrey"
                    android:textSize="14sp" />

                <com.mlife.utils.CustomTextView
                    android:id="@+id/tv_ClubEventPeopleNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:paddingLeft="2dp"
                    android:text="Number of People: 20"
                    android:textColor="@color/LightGrey"
                    android:textSize="14sp" />

                <com.mlife.utils.CustomButton
                    android:id="@+id/btn_Cancle"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custombutton"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/White" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0.3"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_ClubEventStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:src="@mipmap/scheduledicon" />

                <com.mlife.utils.CustomTextView
                    android:id="@+id/tv_ClubEventStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:maxLines="1"
                    android:text="Booked"
                    android:textColor="@color/LightGrey"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#d2d2d2" />

</LinearLayout>