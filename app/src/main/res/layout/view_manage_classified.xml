<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <com.mlife.utils.CustomTextView
            android:id="@+id/tv_Heading_ManageClassified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/Red"
            android:textSize="16sp" />

        <com.mlife.utils.CustomTextView
            android:id="@+id/tv_Details_ManageClassified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="Details"
            android:textColor="@color/DarkGrey"
            android:textSize="14sp" />

        <com.mlife.utils.CustomTextView
            android:id="@+id/tv_postedDate_ManageClassified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Date - Time"
            android:textColor="@color/DarkGrey"
            android:textSize="14sp" />

        <com.mlife.utils.CustomButton
            android:id="@+id/btn_postedDelete_ManageClassified"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:text="Delete"
            android:textColor="@color/White"
            android:textAllCaps="false"
            android:background="@drawable/custombutton" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#dcdcdc" />

</LinearLayout>