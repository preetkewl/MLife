<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mlife.activities.ActivityMyRequestNewTicket"
    tools:showIn="@layout/activity__my_request__new_ticket">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <com.mlife.utils.CustomEditText
            android:id="@+id/et_Description_NewTicket"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/shape_box"
            android:gravity="top"
            android:hint="Enter description here"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="8"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/Red" />

        <com.mlife.utils.CustomButton
            android:id="@+id/btn_SubmitTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/custombutton"
            android:text="Submit Ticket"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>