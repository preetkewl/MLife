<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center"
        android:background="@mipmap/goupbg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.mlife.utils.CustomTextView
                android:id="@+id/tv_ExploreGroupHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRAVEL"
                android:textColor="@color/Red"
                android:textSize="18sp" />

            <com.mlife.utils.CustomTextView
                android:id="@+id/tv_ExploreGroupMembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 Members"
                android:textColor="@color/LightGrey"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.mlife.utils.CustomButton
                android:id="@+id/btn_ExploreGroupExplore"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                android:layout_weight=".5"
                android:background="@drawable/custombutton"
                android:text="Explore"
                android:textAllCaps="false"
                android:textColor="@color/White" />

            <com.mlife.utils.CustomButton
                android:id="@+id/btn_ExploreGroupJoinGroup"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="25dp"
                android:layout_weight=".5"
                android:background="@drawable/custombuttongray"
                android:text="Join Group"
                android:textAllCaps="false"
                android:textColor="@color/White" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>