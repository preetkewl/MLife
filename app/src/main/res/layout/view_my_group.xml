<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_heading"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@mipmap/goupbg"
            android:gravity="center"
            android:orientation="vertical">

            <com.mlife.utils.CustomTextView
                android:id="@+id/tv_MyGroupHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRAVEL"
                android:textColor="@color/Red"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@color/Red"
                android:gravity="center">

                <com.mlife.utils.CustomTextView
                    android:id="@+id/tv_MyGroupMembers"
android:drawableLeft="@mipmap/members"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_PendingRequest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@color/DarkGrey"
                android:gravity="center">

                <com.mlife.utils.CustomTextView
                    android:drawableLeft="@mipmap/pendingrequest"
                    android:drawablePadding="10dp"
                    android:id="@+id/tv_PendingMembers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/White"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>